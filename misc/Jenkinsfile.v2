pipeline {
    environment {
        NPM_CONFIG_CACHE = "${WORKSPACE}/.npm"
    }
    agent any
    stages {
        stage('test') {
            agent {
                docker {
                    image 'node:16'
                    args '-u 0:0'            
                }
            }
            steps {
                sh 'npm install --only=dev'
                sh 'npm test'
            }
        }
    }
}
